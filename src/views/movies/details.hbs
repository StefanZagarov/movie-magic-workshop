<section id="details-page">

    <div class="main_card">
        <div class="card_left">
            <div class="card_datails">

                <h1>{{movie.title}}</h1>
                <div class="card-movie">
                    <div class="first-info">
                        <p class="card-genre">Genre: {{movie.genre}}</p>
                        <p class="card-director">Directror: {{movie.director}}</p>
                    </div>
                    <div class="second-info">
                        <p class="card-year">Year: {{movie.year}}</p>
                        {{!-- For the rating we create a star for the ammount of rating the movie has (if it has rating
                        of 8 we show 8 stars) --}}
                        {{!-- `rating` is the cusom helper we registered, `movie.rating` is the property which we send
                        as argument --}}
                        <p class="card-ranking">Rating: <span id="stars">{{{rating movie.rating}}}</span></p>
                    </div>

                </div>

                <p class="disc">Description: {{movie.description}}</p>


            </div>
            {{#if isOwner}}
            <div class="details-btn">
                <a href="/movies/{{movie._id}}/edit" id="edit-button">Edit</a>
                <a href="/movies/{{movie._id}}/delete" id="delete-button">Delete</a>
                <a href="/movies/{{movie._id}}/attach" id="attach-button" style="display: inline-block;">Attach cast</a>
            </div>
            {{/if}}
        </div>
        <div class="card_right">
            <img src="{{movie.imageUrl}}" alt="{{movie.title}}">
        </div>
    </div>

    {{!-- We can make this a partial, but there is no point since partials are created only when the elemen/s will be
    used on different page aswell --}}
    <div class="main-cast-card">
        {{!-- Instead we can just loop it here --}}
        {{#each movie.casts}}
        <div class="cast-card">
            <div class="card-img">
                <img src="{{cast.imageUrl}}" alt="{{cast.name}}">
            </div>
            <div class="cast-info">
                <h1>{{cast.name}}</h1>
                <h3>Age: {{cast.age}}</h3>
                <h3>Born: {{cast.born}}</h3>
                <h3>Name in Movie: {{character}}</h3>
            </div>
        </div>
        {{/each}}
    </div>

</section>